<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lighterPink">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="370dp"
            android:layout_height="35dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@color/lighterPink"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="This application is a study project in the 3rd year of the ISMIN branch of the Mines of Saint-Etienne."
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="370dp"
            android:layout_height="17dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="It was developed by Aubin Denis and Emilie Bes."
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="371dp"
            android:layout_height="34dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="The application is connected to an API hosted on CleverCloud and takes data from the database:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="371dp"
            android:layout_height="34dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="https://datahub.io/five-thirty-eight/candy-power-ranking?fbclid=IwAR08rq3BUWV4puPHUS8BHJQItH6eAHrWSAdkWIDSs5XYk_9B49z6OTuz0KA#resource-candy-data"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="371dp"
            android:layout_height="34dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="The application displays the list of the candies and allows users to chose favorites  stored on CleverCloud."
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="172dp"
            android:layout_height="184dp"
            android:src="@drawable/bs_em"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageView6" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="271dp"
            android:layout_height="206dp"
            android:layout_marginEnd="170dp"
            android:src="@drawable/photodenis"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView6" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="251dp"
            android:layout_height="238dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="30dp"
            android:alpha="0.4"
            android:tintMode="multiply"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            app:srcCompat="@drawable/candy2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>